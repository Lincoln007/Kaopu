@{ 
    Layout = null;
    Floww Flow = ViewBag.Flow;
}

<script>
    $(function () {
        $("#form-flow").submit(function () {
            ZtopSubmit("#form-flow");
            return false;
        });
    });
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h3 class="modal-title">流程</h3>
</div>

<form class="form-horizontal" method="post" id="form-flow" action="/ZtopSystem/Flow/Save" Url="/ZtopSystem/Flow/Index">
    <div class="modal-body">
        <div class="form-group">
            <label class="control-label col-xs-3">流程名称：</label>
            <div class="col-xs-7">
                <input type="hidden" name="ID" value="@(Flow==null?0:Flow.ID)" />
                <input type="text" name="Name" class="form-control" placeholder="流程名称" required value="@(Flow==null?"":Flow.Name)" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">撤回：</label>
            <div class="col-xs-7">
                <label class="radio-inline">
                    <input type="radio" name="CanBack" value="true" @(Flow==null?"":Flow.CanBack==true?"checked=checked":"") />支持
                </label>
                <label class="radio-inline">
                    <input type="radio" name="CanBack" value="false" @(Flow==null?"":Flow.CanBack==false?"checked=checked":"") />不支持
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">备注：</label>
            <div class="col-xs-7">
                <textarea class="form-control" rows="3" name="Content">@(Flow==null?"":Flow.Content)</textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i>确定</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> 取消</button>
    </div>
</form>
