@using Ztop.Todo.ActiveDirectory
@{
    ViewBag.Title = "管理";
    Layout = "~/Areas/Jurisdiction/Views/Admin/_Layout.cshtml";
    List<Ztop.Todo.Model.Authorize> list = ViewBag.List;
    Dictionary<string, List<Ztop.Todo.ActiveDirectory.Group[]>> Reborn = ViewBag.Groups;
    List<Ztop.Todo.Model.ADGroup> ADGroup = ViewBag.ADGroup;
    int SerialNumber = 1;
}

<div style="position:relative;">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#Create" data-toggle="tab"><i class="glyphicon glyphicon-cog"></i>&nbsp;授权&nbsp;</a></li>
        <li class=""><a href="#List" data-toggle="tab"><i class="glyphicon glyphicon-th"></i>&nbsp; 权限表</a></li>
    </ul>
</div>

<div class="tab-content">
    <div class="tab-pane fade active in" id="Create">
        @{
            Html.RenderPartial("Accredit", ADGroup);
        }
    </div>
    <div class="tab-pane fade" id="List">
        <table class="table table-bordered">
            <tr>
                <th>序号</th>
                <th style="width:100px;">管理者</th>
                <th>管理组名</th>
                <th>备注</th>
            </tr>
            @foreach (var item in list)
            {
                <tr>
                    <td>@(SerialNumber++)</td>
                    <td>@(item.Manager)</td>
                    <td>
                        @if (item.Groups != null)
                        {
                            foreach (var entry in item.Groups)
                            {
                                <span class="label label-primary" style="line-height:250%">@(entry.Name)</span>
                            }
                        }
                    </td>
                    <td>
                        <a href="/Jurisdiction/Admin/EditImpower?id=@(item.ID)" class="btn btn-success"><i class="glyphicon glyphicon-edit"></i>编辑权限</a>
                    </td>
                </tr>
             }
        </table>
    </div>
</div>



<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true" id="Modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

        </div>
    </div>
</div>

<script>
    $(function () {


        $("#Modal").on("hidden.bs.modal", function () {
            $(this).removeData("bs.modal");
        });
    });
</script>

