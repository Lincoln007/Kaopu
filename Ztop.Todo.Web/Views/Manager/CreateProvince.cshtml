@{ 
    Layout = null;
}

<script >
    $(function () {
        $("#Add-Province").submit(function () {
            ShowMessage("正在添加省级城市，请稍等......");
            var data = $(this).serialize();
            $.request("/Manager/SaveProvince", data, function (json) {
                if (json.result == 1) {
                    ShowMessage("成功保存城市，正在跳转，请稍等......");
                    location.href = "/Manager";
                } else if (json.result == 0) {
                    ShowMessage(json.content);
                }
            });
            return false;
        });
    });
</script>

<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">添加省级城市</h3>
        <div class="alert alert-warning" role="alert" name="Message" style="display:none;">
            <i class="icon-spin icon-spinner icon-large"></i>
            <span></span>
        </div>
        <form class="form-horizontal" method="post" action="" id="Add-Province">
            
            <div class="form-group">
                <label class="control-label col-md-3">城市名称：</label>
                <div class="col-md-8">
                    <input type="text" name="Name" class="form-control" placeholder="城市名称" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">代码：</label>
                <div class="col-md-8">
                    <input type="text" name="Code" class="form-control" placeholder="代码"  required/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">备注：</label>
                <div class="col-md-8">
                    <textarea name="Remark" rows="3" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8 col-md-offset-3">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i>确定</button>
                </div>
            </div>
        </form>
    </div>
</div>
