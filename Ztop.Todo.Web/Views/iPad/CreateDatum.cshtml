@{ 
    Layout = null;
}

<script >
    $(function () {
        $("input.datetimepicker").datetimepicker({
            timepicker: false,
            format: 'Y-m-d'
        });
    });
</script>

<h3 class="text-center">添加平板数据</h3>
<hr />
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="/">
            <div class="form-group">
                <label class="control-label col-md-4">所属单位【必填】：</label>
                <div class="col-md-7">
                    <input type="text" name="Address" class="form-control" placeholder="所属单位" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">更新内容【必填】：</label>
                <div class="col-md-7">
                    <textarea class="form-control" name="Content" rows="4"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">数据包路径【必填】：</label>
                <div class="col-md-7">
                    <input type="text" class="form-control" name="Path"  placeholder="数据包路径"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">数据制作人：</label>
                <div class="col-md-7">
                    <input type="text" class="form-control" name="Name" placeholder="数据制作人" value="@(Identity.Name)" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">数据制作时间：</label>
                <div class="col-md-7">
                    <input type="text" class="form-control datetimepicker" name="Time" value="@(DateTime.Now.ToString("yyyy-MM-dd"))" readonly />
                </div>
            </div>
            
            <div class="form-group">
                <label class="control-label col-md-4">数据包：</label>
                <div class="col-md-7">
                    <input type="file" class="form-control" name="File" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-7 col-md-offset-4">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-upload"></i>确定</button>
                </div>
            </div>
        </form>
    </div>
</div>
