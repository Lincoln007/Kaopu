@{ 
    Layout = null;
    List<iPadDatum> list = ViewBag.List;
}


<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>序号</th>
            <th>所属单位</th>
            <th>数据制作人</th>
            <th>数据制作时间</th>
            <th>更新内容</th>
            <th>下载</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in list)
        {
            <tr>
                <td>@(item.ID)</td>
                <td>@(item.Address)</td>
                <td>@(item.Name)</td>
                <td>@(item.Time.ToLongDateString())</td>
                <td>
                    @if (item.Content.Length > 10)
                    {
                        <abbr title="@(item.Content)">@(item.Content.Substring(0,10))</abbr>
                    }
                    else
                    {
                        @(item.Content)
                    }
                  
                </td>
            </tr>
        }
    </tbody>
</table>