
@{
    ViewBag.Title = "项目查询";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Article> list = ViewBag.List;
    ArticleParameter parameter = ViewBag.Parameter;
}

<div class="col-md-4 col-xs-4 col-sm-4 well" style="padding:0px;">
    <fieldset><legend>查询设置</legend></fieldset>
    <form method="get">
        <div class="row">
            <div class="col-md-12 col-xs-12 col-sm-12">
                <div class="form-group">
                    <label class="control-label">项目名称：</label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <div class="input-group-btn" role="group">
                                <button type="button" class="btn btn-sm btn-@(string.IsNullOrEmpty(parameter.Name)?"success":"default")" name="Name">全部</button>
                            </div>
                            <input type="text" name="Name" class="form-control input-sm" placeholder="项目名称" value="@(parameter.Name)" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">对方单位：</label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <div class="input-group-btn" role="group">
                                <button type="button" class="btn btn-sm btn-@(string.IsNullOrEmpty(parameter.OtherSide)?"success":"default")" name="OtherSide">全部</button>
                            </div>
                            <input type="text" name="OtherSide" class="form-control input-sm" placeholder="对方单位" value="@(parameter.OtherSide)" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">登记编号：</label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <div class="input-group-btn" role="group">
                                <button type="button" class="btn btn-sm btn-@(string.IsNullOrEmpty(parameter.Number)?"success":"default")" name="Number">全部</button>
                            </div>
                            <input type="text" name="Number" class="form-control input-sm" placeholder="登记编号"  value="@(parameter.Number)"/>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">意向金额：</label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <input type="text" name="MinMoney" class="form-control input-sm" placeholder="最小值" />
                            <span class="input-group-addon input-sm">至</span>
                            <input type="text" name="MaxMoney" class="form-control input-sm" placeholder="最大值" />
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-sm btn-success"><i class="glyphicon glyphicon-search"></i>立即查询</button>
                            <button type="button" class="btn btn-sm btn-default" onclick="history.back();"><i class="glyphicon glyphicon-arrow-left"></i>返回</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="col-md-8 col-xs-8 col-sm-8">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>项目名称</th>
                <th>登记编号</th>
                <th>对方单位</th>
                <th>意向金额[元]</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var article in list)
            {
                <tr>
                    <td><a href="/Finance/DetailArticle?id=@(article.ID)">@(article.Name)</a> </td>
                    <td>@(article.Number)</td>
                    <td>@(article.OtherSide)</td>
                    <td>@(article.Money)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
