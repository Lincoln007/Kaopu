
@{
    ViewBag.Title = "合同查询";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-5 well" style="padding:0px;">
    <fieldset><legend>查询设置</legend></fieldset>
    <form method="get">
        <div class="form-group">
            <label class="control-label">签署单位：</label>
            <div class="col-md-12">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" name="ZtopCompany">全部</button>
                    @foreach (ZtopCompany company in Enum.GetValues(typeof(ZtopCompany)))
                    {
                        <button type="button" class="btn btn-default" name="ZtopCompany">@(company.GetDescription())</button>
                    }
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">合同名称：</label>
            <div class="col-md-12">
                <div class="input-group">
                    <div class="input-group-btn" role="group">
                        <button type="button" class="btn btn-default" targetName="Name">全部</button>
                    </div>
                    <input type="text" class="form-control" placeholder="合同名称关键字" name="Name" value="" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">对方单位：</label>
            <div class="col-md-12">
                <div class="input-group">
                    <div class="input-group-btn" role="group">
                        <button type="button" class="btn btn-default" targetName="OtherSide">全部</button>
                    </div>
                    <input type="text" class="form-control" placeholder="对方单位关键字" name="OtherSide" value="" />
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-search"></i> 立即查询</button>
            </div>
        </div>
    </form>
</div>

<div class="col-md-7">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>合同编号</th>
                <th>合同名称</th>
                <th>对方单位</th>
                <th>签署单位</th>
                <th>创建时间</th>
            </tr>
        </thead>
    </table>
</div>

<script>
    $(function () {
        $(".btn-group>button").click(function () {
            var val = $(this).text();
            $(".btn-group>button").removeClass("btn-success").addClass("btn-default");
            $(this).removeClass("btn-default").addClass("btn-success");
        });
        $(".input-group-btn>button").click(function () {
            var targetName = $(this).attr("targetName");
            $(this).removeClass("btn-default").addClass("btn-success");
            $("input[name='" + targetName + "']").val();
        });
        $("input[name='OtherSide']").focus(function () {
            $(this).prev().children().removeClass("btn-success").addClass("btn-default");
        });

        $("input[name='Name']").focus(function () {
            $(this).prev().children().removeClass("btn-success").addClass("btn-default");
        });
    });
</script>

