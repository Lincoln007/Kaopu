
@{
    ViewBag.Title = "查看项目合同";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Contract contract = ViewBag.Contract;
}

<hr />

<div class="btn-group" role="group">
    @if (!contract.Deleted)
    {
        if (!contract.Archived)
        {
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#Apply"><i class="glyphicon glyphicon-pencil"></i> 申请开具发票</button>
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#Edit"><i class="glyphicon glyphicon-edit"></i>编辑合同</button>
            <button type="button" class="btn btn-primary btn-archive" tabindex="@(contract.ID)"><i class="glyphicon glyphicon-lock"></i>归档合同</button>
            <button type="button" class="btn btn-danger" tabindex="@(contract.ID)"><i class="glyphicon glyphicon-remove"></i>删除合同</button>
        }
        else
        {
            <h3>@(contract.Name)<span class="label label-info">已归档</span></h3>
        }
       
    }
    else
    {
        <h3>@(contract.Name)<span class="label label-danger">已删除</span></h3>
    }
    <button type="button" class="btn btn-default" onclick="history.back();"><i class="glyphicon glyphicon-arrow-left"></i>返回</button>

</div>

<div class="modal fade" id="Apply" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">申请开具发票</h4>
            </div>
            <form class="form-horizontal" method="post" action="/Finance/SaveInvoice" id="from-invoice">
                <div class="modal-body">
                    <input type="hidden" name="Applicant" value="@(Identity.Name)" />
                    <input type="hidden" name="CID" value="@(contract.ID)" />
                    <div class="form-group">
                        <label class="control-label col-md-3">开票单位:</label>
                        <div class="col-md-8">
                            <select name="ZtopCompany" class="form-control">
                                @foreach (ZtopCompany company in Enum.GetValues(typeof(ZtopCompany)))
                                {
                                    <option value="@(company)">@(company.GetDescription())</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">对方单位:</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="OtherSideCompany" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">发票金额：</label>
                        <div class="col-md-8">
                            <div class="input-group">
                                <input type="text" class="form-control" name="Money" />
                                <span class="input-group-addon">元</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">发票内容：</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="Content" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-3">
                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> 取消</button>
                            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i> 申请</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="Edit" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">编辑</h4>
            </div>
            <form class="form-horizontal" method="post" action="/Finance/Edit" id="Edit-Contract">
                <div class="modal-body">
                    <input type="hidden" name="ID" value="@(contract.ID)" />
                    <input type="hidden" name="Creator" value="@(contract.Creator)" />
                    <div class="form-group">
                        <label class="control-label col-md-3">合同编号：</label>
                        <div class="col-md-8">
                            <input type="text" name="Coding" class="form-control" value="@(contract.Coding)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">合同名称：</label>
                        <div class="col-md-8">
                            <input type="text" name="Name" class="form-control" value="@(contract.Name)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">对方单位：</label>
                        <div class="col-md-8">
                            <input type="text" name="Company" class="form-control" value="@(contract.Company)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">签署单位：</label>
                        <div class="col-md-8">
                            <select name="ZtopCompany" class="form-control">
                                @foreach(ZtopCompany company in Enum.GetValues(typeof(ZtopCompany)))
                                {
                                    <option value="@(company)" @(contract.ZtopCompany==company?"checked=checked":"")>@(company.GetDescription())</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-3">
                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> 取消</button>
                            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-remove"></i> 编辑</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<hr />
<div class="alert alert-success alert-dismissable" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <table class="table table-bordered">
        <tr>
            <th>合同编号</th>
            <td>@(contract.Coding)</td>
            <th>合同名称</th>
            <td>@(contract.Name)</td>
        </tr>
        <tr>
            <th>对方单位</th>
            <td>@(contract.Company)</td>
            <th>签署单位</th>
            <td>@(contract.ZtopCompany.GetDescription())</td>
        </tr>
    </table>
</div>

<hr />

@if (contract.Invoices != null && contract.Invoices.Count != 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>开票编号</th>
                <th>开票申请人</th>
                <th>申请时间</th>
                <th>开票单位</th>
                <th>对方单位</th>
                <th>发票金额（元）</th>
                <th>发票内容</th>
                <th>发票开出时间</th>
                <th>发票编号</th>
                <th>发票状态</th>
                <th class="col-md-2">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var invoice in contract.Invoices)
            {
                <tr>
                    <td>
                        @(invoice.Coding)   
                    </td>
                    <td>@(invoice.Applicant)</td>
                    <td>@(invoice.Time.ToLongDateString()) @(invoice.Time.ToLongTimeString())</td>
                    <td>@(invoice.ZtopCompany.GetDescription())</td>
                    <td>@(invoice.OtherSideCompany)</td>
                    <td>@(invoice.Money)</td>
                    <td>@(invoice.Content)</td>
                    <td>@(invoice.FillTime.HasValue?invoice.FillTime.Value.ToLongDateString():"-")</td>
                    <td>@(invoice.Number)</td>
                    <td>@(invoice.State.GetDescription())</td>
                    <td>
                        @if (invoice.State!=InvoiceState.None)
                        {
                            <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#Change@(invoice.Coding)"><i class="glyphicon glyphicon-edit"></i>修改发票状态</a>
                            <div class="modal fade" id="Change@(invoice.Coding)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title">编辑发票信息</h4>
                                        </div>
                                        <form class="form-horizontal" action="/Finance/Change" method="post" name="Change">
                                            <div class="modal-body">
                                                <input type="hidden" name="ID" value="@(invoice.ID)" />
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">发票状态：</label>
                                                    <div class="col-md-8">
                                                        @foreach(InvoiceState state in Enum.GetValues(typeof(InvoiceState)))
                                                        {
                                                            <label class="radio-inline">
                                                                <input type="radio" name="State" value="@(state)" @(invoice.State==state?"checked=checked":"") />@(state.GetDescription())
                                                            </label>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <div class="form-group">
                                                    <div class="col-md-8 col-lg-offset-3">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> 取消</button>
                                                        <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i> 补充</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="btn-group btn-group-justified" role="group">
                                <a href="#" class="btn btn-success" data-toggle="modal" data-target="#Add@(invoice.Coding)"><i class="glyphicon glyphicon-plus"></i>补充信息</a>
                                <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#Edit@(invoice.Coding)"><i class="glyphicon glyphicon-edit"></i>编辑</a>
                                <a href="javascript:void(0)" class="btn btn-danger btn-remove" Index="@(invoice.ID)"><i class="glyphicon glyphicon-remove"></i>删除</a>
                            </div> 
                            <div class="modal fade" id="Add@(invoice.Coding)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title">@(invoice.Coding) 发票信息录入</h4>
                                        </div>
                                        <form class="form-horizontal" action="/Finance/ImproveInvoice" method="post" name="Plus">
                                            <div class="modal-body">
                                                <input type="hidden" name="ID" value="@(invoice.ID)" />
                                                <input type="hidden" name="State" value="@(InvoiceState.Have)" />
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">发票时间：</label>
                                                    <div class="col-md-8">
                                                        <input type="text" class="form-control" name="FillTime" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">发票编号：</label>
                                                    <div class="col-md-8">
                                                        <input type="text" class="form-control" name="Number" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">备注：</label>
                                                    <div class="col-md-8">
                                                        <textarea class="form-control" name="Remark" rows="3"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <div class="form-group">
                                                    <div class="col-md-8 col-lg-offset-3">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> 取消</button>
                                                        <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i> 补充</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                            <div class="modal fade" id="Edit@(invoice.Coding)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title">@(invoice.Coding) 编辑</h4>
                                        </div>
                                        <form class="form-horizontal" action="/Finance/EditInvoice" method="post" name="Edit">
                                            <div  class="modal-body">
                                                <input type="hidden" name="ID" value="@(invoice.ID)" />
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">开票单位：</label>
                                                    <div class="col-md-8">
                                                        <select name="ZtopCompany" class="form-control">
                                                            @foreach(ZtopCompany company in Enum.GetValues(typeof(ZtopCompany)))
                                                            {
                                                                <option value="@(company)" @(company==invoice.ZtopCompany?"selected=selected":"")>@(company.GetDescription())</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">对方单位：</label>
                                                    <div class="col-md-8">
                                                        <input type="text" class="form-control" name="OtherSideCompany" value="@(invoice.OtherSideCompany)" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">发票金额：</label>
                                                    <div class="col-md-8">
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" name="Money" value="@(invoice.Money)" />
                                                            <span class="input-group-addon">元</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">发票内容：</label>
                                                    <div class="col-md-8">
                                                        <input type="text" name="Content" class="form-control" value="@(invoice.Content)"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <div class="form-group">
                                                    <div class="col-md-8 col-md-offset-3">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> 取消</button>
                                                        <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i> 编辑</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>     
                        }
                      
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<script>
    $(function () {
        $("#from-invoice").submit(function () {
            var data = $(this).serialize();
            $.request("/Finance/SaveInvoice", data, function (json) {
                alert(json.content);
                if (json.result == 1) {
                    location.href = "/Finance/Detail?id=" + json.data.CID;
                }
                return false;
            });
            return false;
        });


        $("#Edit-Contract").submit(function(){
            var data=$(this).serialize();
            $.request("/Finance/Edit",data,function(json){
                alert(json.content);
                if(json.result==1){
                    location.href="/Finance/Detail?id="+json.data;
                }
                return false;
            });
            return false;
        });

        $("button.btn-danger").click(function(){
            var index=$(this).attr("tabindex");
            $.request("/Finance/Delete?id="+index,null,function(json){
                alert(json.content);
                if(json.result==1){
                    location.href="/Finance/Index";
                }
                return false;
            });
            return false;
        });

        $(".btn-archive").click(function(){
            var index=$(this).attr("tabindex");
            $.request("/Finance/Archive?id="+index,null,function(json){
                alert(json.content);
                if(json.result==1){
                    location.href="/Finance/Detail?id="+json.data;
                }
                return false;
            });
            return false;
        });
        

        $("input[name='FillTime']").datetimepicker({
            timepicker: false,
            format: 'Y-m-d'
        });

        $("[name='Plus']").submit(function () {
            var data = $(this).serialize();
            $.request("/Finance/ImproveInvoice", data, function (json) {
                alert(json.content);
                if (json.result == 1) {
                    location.href = "/Finance/Detail?id=" + @(contract.ID);
                }
                return false;
            });
            return false;
        });

        $("[name='Change']").submit(function(){
            var data=$(this).serialize();
            $.request("/Finance/Change",data,function(json){
                alert(json.content);
                if(json.result==1){
                    location.href="/Finance/Detail?id="+@(contract.ID);
                }
                return false;
            });
            return false;
        });

        $("[name='Edit']").submit(function(){
            var data=$(this).serialize();
            $.request("/Finance/EditInvoice",data,function(json){
                alert(json.content);
                if(json.result==1){
                    location.href="/Finance/Detail?id="+@(contract.ID);
                }
                return false;
            });
            return false;
        });

        $(".btn-remove").click(function(){
            var index=$(this).attr("Index");
            if(index!=undefined&&index!=""&&index!="undefined"){
                $.request("/Finance/DeleteInvoice?id="+index,null,function(json){
                    alert(json.content);
                    if(json.result==1){
                        location.href="/Finance/Detail?id="+@(contract.ID);
                    }
                    return false;
                });
                
            }

            return false;
        });
    })
</script>

