<div class="row">
    <div class="col-md-6 col-xs-6 col-sm-6" style="padding:10px;">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>到账日期</th>
                    <th>到账金额（元）</th>
                    <th>对方户名</th>
                    <th>可关联金额（元）</th>
                    <th>发票关联</th>
                </tr>
            </thead>
            <tbody id="BillAccount">

            </tbody>
        </table>
    </div>
    <div class="col-md-6 col-xs-6 col-sm-6" style="padding:10px;">
        <form class="form-horizontal" method="post" action="" id="Relate-form">
           <input type="hidden" name="BID" />
            <input type="text" name="IID" />
        </form>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>发票内容</th>
                    <th>发票金额（元）</th>
                    <th>开票时间</th>
                    <th>关联状态</th>
                </tr>
            </thead>
            <tbody id="Invoice"></tbody>
        </table>
       
    </div>
</div>

<script>
    $(function () {
        $("#BA-Search").submit(function () {
            var values = $(this).serialize();
            $.getJSON("/Finance/GetJsonBillAccount", values, function (data) {
                $("#BillAccount").empty();
                $.each(data, function (index, value) {
                    var timeString = value.Time.replace("/Date(", "").replace(")/", "");
                    var currentTime = new Date();
                    currentTime.setTime(timeString);
                    $("#BillAccount").append("<tr><td>" + currentTime.toLocaleDateString() + "</td><td>" + value.Money + "</td><td>" + value.Account + "</td><td>" + value.Leave + "</td><td><button type='button' class='btn btn-sm btn-success btn-relate' name='Money"+value.Leave+"' Index='"+value.ID+"'>关联</button></td></tr>")
                });

                $("#BillAccount button.btn-relate").unbind("click").bind("click", function () {
                    var money = parseFloat($(this).attr("name").replace("Money", ""));
                    if (isNaN(money)) {
                        alert("无法获取当前到账记录金额，请刷新系统重试！");
                        return false;
                    }
                    var items = [];
                    var sum = 0;
                    $("#Invoice>tr.success").each(function () {
                        var index = parseInt($(this).attr("Index"));
                        var a = parseFloat($(this).attr("Money"));
                        if (!isNaN(index) && !isNaN(a)) {
                            sum += a;
                            items.push(index);
                        }
                    });
                    if (money < sum) {
                        alert("超出可关联金额！请核对");
                        return false;
                    } else {
                        $("#Relate-form input[name='BID']").val($(this).attr("Index"));
                        $("#Relate-form input[name='IID']").val(items.join());
                        var data = $("#Relate-form").serialize();
                        $.request("/Finance/Relate", data, function (json) {
                            alert(json.content);
                            if (json.result == 1) {
                                $("#Invoice>tr.success").remove();
                                $("#Relate-form input[name='BID']").val("");
                                $("#Relate-form input[name='IID']").val("");
                            }
                            return false;
                        });
                    }
                });

                return false;
            });
            return false;
        });
        $("#Invoice-Search").submit(function () {
            var value = $(this).serialize();
            $.getJSON("/Finance/GetJsonInvoice", value, function (data) {
                $("#Invoice").empty();
                $.each(data, function (Index, value) {
                    if (value.FillTime != null) {
                        var timeString = value.FillTime.replace("/Date(", "").replace(")/", "");
                        var currentTime = new Date();
                        currentTime.setTime(timeString);
                        $("#Invoice").append("<tr Index='"+value.ID+"' Money='"+value.Money+"'><td>" + value.Content + "</td><td>" + value.Money + "</td><td>" + currentTime.toLocaleDateString() + "</td><td><i class='glyphicon glyphicon-refresh' name='CSS"+value.ID+"'></i></td></tr>");
                    }
                });

                $("#Invoice>tr").unbind("click").bind("click", function () {
                    var index = $(this).attr("Index");
                    if (!$(this).hasClass("success")) {
                        $(this).addClass("success");
                        $("i[name='CSS" + index + "']").removeClass("glyphicon-refresh").addClass("glyphicon-ok");
                    } else {
                        $(this).removeClass("success");
                        $("i[name='CSS" + index + "']").removeClass("glyphicon-ok").addClass("glyphicon-refresh");
                    }
                });
                return false;
            });
            return false;
        });
    });
</script>
