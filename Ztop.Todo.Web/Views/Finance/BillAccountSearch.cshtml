
@{
    ViewBag.Title = "到账查询";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="col-md-4 col-xs-4 well" style="padding:0px;">
    <fieldset><legend>查询设置</legend></fieldset>
    <form method="get">
        <input type="hidden" name="Association" />
        <div class="form-group">
            <label class="control-label">到账时间：</label>
            <div class="col-md-12">
                <div class="input-group">
                    <input type="text" name="StartTime" placeholder="起始时间" class="form-control datetimepicker" />
                    <span class="input-group-addon">至</span>
                    <input type="text" name="EndTime" placeholder="结束时间" class="form-control datetimepicker" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">到账金额：</label>
            <div class="col-md-12">
                <div class="input-group">
                    <input type="text" name="MinMoney" placeholder="最小值" class="form-control" />
                    <span class="input-group-addon">至</span>
                    <input type="text" name="MaxMoney" placeholder="最大值" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">对方户名：</label>
            <div class="col-md-12">
                <div class="input-group">
                    <div class="input-group-btn" role="group">
                        <button type="button" class="btn btn-default" name="Account">全部</button>
                    </div>
                    <input type="text" name="Account" placeholder="对方户名关键字" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">银行备注：</label>
            <div class="col-md-12">
                <div class="input-group" role="group">
                    <div class="input-group-btn" role="group">
                        <button type="button" class="btn btn-default" name="Remark">全部</button>
                    </div>
                    <input type="text" name="Remark" placeholder="银行备注关键字" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">发票关联：</label>
            <div class="col-md-12">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default" name="Association">全部</button>
                    @foreach(Association association in Enum.GetValues(typeof(Association)))
                    {
                        <button type="button" class="btn btn-default" name="Association">@(association.GetDescription())</button>
                    }
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-search"></i> 立即查询</button>
                    <button type="button" class="btn btn-default" onclick="history.back();"><i class="glyphicon glyphicon-arrow-left"></i>返回</button>
                </div>
            </div>
        </div>
    </form>
</div>


