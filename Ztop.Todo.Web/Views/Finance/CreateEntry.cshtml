        function CheckMoney() {
            var money = $("input[name='Money']").val();
            var sum = 0;
            $("[name='IID']:checked").each(function () {
                var targetID = $(this).attr("targetID");
                var price = parseFloat($("#" + targetID).val());
                if (!isNaN(price) && price != NaN) {
                    sum += price;
                }
            });
            if (sum != money) {
                return false;
            }
            return true;
        }

        $("#form-invoicebill").submit(function () {
            if (CheckMoney()) {
                var data = $(this).serialize();
                $.request("/Finance/SaveInvoiceBill", data, function (json) {
                    alert(json.content);
                    if (json.result == 1) {
                        location.href = "/Finance/Index";
                    }
                    return false;
                });
            } else {
                alert("请核对金额！");
            }
            return false;
        });

