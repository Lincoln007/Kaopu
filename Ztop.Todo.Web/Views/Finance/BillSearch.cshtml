
@{
    ViewBag.Title = "到账查询";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-5 well" style="padding:0px;">
    <fieldset><legend>查询设置</legend></fieldset>
    <form method="get">
        <div class="form-group">
            <label class="control-label">到账时间：</label>
            <div class="col-md-12">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default">全部</button>
                    <button type="button" class="btn btn-default">本周</button>
                    <button type="button" class="btn btn-default">本月</button>
                    <button type="button" class="btn btn-default">本年</button>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">到账金额：</label>
            <div class="col-md-12">
                <div class="input-group">
                    <input type="text" class="form-control" name="MinMoney" placeholder="最小值" />
                    <span class="input-group-addon">至</span>
                    <input type="text" class="form-control" name="MaxMoney" placeholder="最大值" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">对方单位：</label>
            <div class="col-md-12">
                <div class="input-group">
                    <div class="input-group-btn" role="group">
                        <button type="button" class="btn btn-default">全部</button>
                    </div>
                    <input type="text" class="form-control" placeholder="" name="" value="" />
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-search"></i> 立即查询</button>
                    <button type="button" class="btn btn-default" onclick="history.back();"><i class="glyphicon glyphicon-arrow-left"></i>返回</button>
                </div> 
            </div>
        </div>
    </form>
</div>

