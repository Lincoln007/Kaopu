@{
    Task model = ViewBag.Model;
    ViewBag.Title = model.ID > 0 ? "修改任务" : "创建任务";
    List<Attachment> files = ViewBag.Attachments;
    List<User> allUsers = ViewBag.AllUsers;
    List<User> selectedUsers = ViewBag.Users ?? new List<User>();
}
<style>
    #panel-selected-users {
        margin-bottom: 5px;
    }

    .selected-user {
        margin: 2px;
    }
</style>
<h3 class="page-header">
    @(ViewBag.Title)
</h3>
<form id="form-task" method="post" action="/task/save" class="form-horizontal" enctype="multipart/form-data">
    <input type="hidden" name="ID" value="@(model.ID)" />
    <div class="form-group">
        <label class="control-label col-lg-2">标题</label>
        <div class="col-lg-8">
            <input type="text" class="form-control" name="Title" value="@(model.Title)" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">内容</label>
        <div class="col-lg-8">
            <textarea class="form-control" name="Content" rows="4">@(model.Content)</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">完成时间</label>
        <div class="col-lg-2">
            <input type="text" id="datetimepicker1" class="form-control" name="ScheduledTime" value="@(model.ScheduledTime.HasValue?model.ScheduledTime.Value.ToShortDateString():null)" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">参与人员</label>
        <div class="col-lg-4">
            <input type="hidden" name="userIds" id="txt-userIds" />
            <div id="panel-selected-users">
                @foreach (var user in selectedUsers)
                {
                    <span class="selected-user label label-default" data-userid="@(user.ID)">@(user.DisplayName) <a href="javascript:;" class="btn btn-remove-user"><i class="glyphicon glyphicon-remove"></i></a></span>
                }
            </div>
            <input type="text" class="form-control" id="txt-user" style="width:200px;" placeholder="输入姓名查询" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">
            附件
        </label>
        <div class="col-lg-8">
            <a href="javascript:;" id="btn-add" class="btn btn-success btn-sm" style="margin-bottom:5px;"><i class="glyphicon glyphicon-open-file"></i> 添加附件</a>
            @if (files != null)
            {
                <table class="table">
                    @foreach (var file in files)
                    {
                        <tr>
                            <td>
                                @(file.FileName)
                            </td>
                            <td>@(file.FileSize / 1024)k</td>
                            <td><a href="/attachment/delete?id=@(file.ID)" class="btn btn-xs btn-delete"><i class="glyphicon glyphicon-remove"></i></a></td>
                        </tr>
                    }
                </table>
            }
            <div id="list-file">

            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-4 col-lg-offset-2">
            <button type="submit" id="btn-submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i> 提交</button>
        </div>
    </div>
</form>

<template id="template" style="display:none;">
    <div class="form-group">
        <div class="col-lg-8">
            <input type="file" class="file form-control" name="file{index}" />
        </div>
        <div class="col-lg-4">
            <button type="button" class="btn btn-xs btn-remove"><i class="glyphicon glyphicon-remove"></i></button>
        </div>
    </div>
</template>

<script>
    $(function () {
        var template = $("#template").html();
        $("#btn-add").click(function () {
            var count = $("input[type='file']").length;
            var html = template.replace("{index}", count + 1);
            $("#list-file").append(html);
            $(".btn-remove").unbind("click").bind("click", function () {
                $(this).parent().parent().remove();
            });
            return false;
        });

        $("#form-task").submit(function () {
            var selectedUserIds =[];
            $(".selected-user").each(function(){
                selectedUserIds.push($(this).attr("data-userid"));
            });
            $("#txt-userIds").val(selectedUserIds.join());
            $("#btn-submit").text("正在提交").disabled();

        });

        $(".btn-delete").click(function () {
            var self = this;
            var href = $(this).attr("href");
            $.request(href, null, function () {
                $(self).parent().parent().remove();
            });
        });

        $("#datetimepicker1").datetimepicker({
            timepicker: false,
            format: 'Y/m/d',
            minDate: '@(DateTime.Today.ToShortDateString())'
        });

        var users = @Html.Raw(allUsers.Select(e => new { value = e.DisplayName, data = e.ID }).ToJson());
        $("#txt-user").autocomplete({
            lookup: users,
            minChars: 1,
            onSelect: function (selected) {
                $("#panel-selected-users").append('<span class="selected-user label label-default" data-userid="'+
                    selected.data+'">'+selected.value +
                    '<a href="javascript:;" class="btn btn-xs btn-remove-user"><i class="glyphicon glyphicon-remove"></i></a></label>');
                $("#txt-user").val("");

                $(".btn-remove-user").unbind("click").bind("click",function(){
                    $(this).parent().remove();
                });
            },
            autoSelectFirst:true,
            //beforeRender: function (container) {
            //    console.log(arguments);
            //},
            //onSearchComplete: function (query, suggestions) {
            //    console.log(arguments);
            //},
            showNoSuggestionNotice: true,
            noSuggestionNotice: '没有匹配的姓名',
        });

        $(".btn-remove-user").unbind("click").bind("click",function(){
            $(this).parent().remove();
        });
    });
</script>