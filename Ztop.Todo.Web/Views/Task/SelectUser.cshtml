@{
    Layout = null;
    List<UserGroup> groups = ViewBag.Groups;
    List<User> allUsers = ViewBag.AllUsers;
    List<User> selectedUsers = ViewBag.Users ?? new List<User>();
}
<div class="form-group">
    <label class="control-label col-lg-2">选择人员</label>
    <div class="col-lg-8">
        @foreach(var group in groups)
        {
            <h4>@(group.Name)</h4>
            foreach (var user in allUsers.Where(e => e.GroupID == group.ID))
            {
                <label class="checkbox-inline col-lg-2"><input type="checkbox" name="userIds" value="@(user.ID)" />@(user.DisplayName)</label>
            }
        }
    </div>
</div>
