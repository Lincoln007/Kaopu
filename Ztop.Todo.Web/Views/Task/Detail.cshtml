@{
    Task model = ViewBag.Model;
    ViewBag.Title = model.Title;
    List<Comment> comments = ViewBag.Comments;
    List<Attachment> attachments = ViewBag.Attachments;
    List<User> users = ViewBag.Users;
    User currentUser = ViewBag.CurrentUser;
}
<h3 class="page-header">
    @(model.Title)
</h3>
<blockquote>
    @(Html.Raw(HtmlUtils.ToHtml(model.Content)))
</blockquote>
<h4>相关附件</h4>
<table class="table">
    @foreach (var item in attachments)
    {
        <tr>
            <td>@(item.FileName)</td>
            <td>@(item.FileSize / 1024)k</td>
            <td><a href="/attachment/download?id=@(item.ID)" target="_blank">查看/下载</a></td>
        </tr>
    }
</table>

<h4>讨论</h4>
<div id="div-comments">
    @foreach (var item in comments)
    {
        <div class="well" id="div-comment-@(item.ID)">
            <p>
                @(Html.Raw(HtmlUtils.ToHtml(item.Content)))
            </p>
            <div>
                <b>
                    <a title="点击回复Ta" href="javascript:;" class="btn btn-xs btn-danger btn-reply" data-user="@(item.User.DisplayName)">@(item.User.DisplayName)</a>
                </b>
                <span>@(item.CreateTime.ToString())</span>
                @if(item.UserID == currentUser.ID)
                {
                    <a href="/comment/delete?id=@(item.ID)" class="btn-comment-delete">删除</a>
                }
            </div>
        </div>
    }
</div>
<form id="form-comment" action="/comment/save?taskId=@(model.ID)" method="post">
    <div class="form-group">
        <label class="control-label">
            评论内容
        </label>
        <textarea id="txt-content" name="Content" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-check"></i> 提交</button>
    </div>
</form>
@if (model.OwnerID == currentUser.ID)
{
    <button id="btn-task-delete" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i> 删除该任务</button>
}
<script>
    $(function () {
        $(".btn-reply").click(function () {
            var replyTo = $(this).attr("data-user");
            $("#txt-content").append("@@" + replyTo + "\r\n").focus();
            return false;
        });
        $("#form-comment").submit(function () {
            var url = $(this).attr("action");
            var content = $("#txt-content").val();
            if (!content) {
                alert("评论内容没有填写");
                return false;
            }
            var data = $(this).serialize();
            $.request(url, data, function () {
                $("#div-comments").append("<div class=well><p>" + content + "</p><span>" +@(((User)ViewBag.CurrentUser).DisplayName) +"</span></div>");
            });
            return false;
        });

        $(".btn-comment-delete").click(function () {
            if (confirm("你确定要删除该评论吗？")) {
                var url = $(this).attr("href");
                var div = $(this).parent().parent();
                $.request(url, null, function () {
                    div.remove();
                });
            }
            return false;
        });

        $("#btn-task-delete").click(function () {
            if (confirm("你确定要删除这个任务吗？")) {
                $.request("/task/delete?id=@(model.ID)", null, function () {
                    window.location.href = "/task";
                });
            }

            return false;
        });
    });
</script>
