<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 智拓TODO</title>
    <link href="~/Content/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/bootstrap.custom.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/jquery.datetimepicker.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/jqtree.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/jquery.autocomplete.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.datetimepicker.js"></script>
    <script src="~/Scripts/common.js"></script>
    <script src="~/Scripts/tree.jquery.js"></script>
    <script src="~/Scripts/jquery.autocomplete.js"></script>
</head>
<body>
    <div id="header" class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/" class="navbar-brand logo">智拓TODO</a>
        </div>
        @if (Identity.IsAuthenticated)
            {
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/"><i class="fa fa-desktop"></i> 欢迎页</a></li>
                    <li><a href="/task/edit"><i class="fa fa-plus"></i> 创建任务</a></li>
                    <li><a href="/task"><i class="fa fa-search"></i> 查询任务</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-gears"></i> 权限管理<span class="caret"></span></a>
                        @Html.Partial("_Authority")
                    </li>
                    @*<li><a href="/Report"><i class="fa fa-credit-card"></i>报销系统</a></li>
                        <li><a href="/Report/Create"><i class="fa fa-calculator"></i> 报销单</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-area-chart"></i> 我的报销<strong class="caret"></strong></a>
                            <ul class="dropdown-menu">
                                <li><a href="/Report/List"><i class="fa fa-spinner fa-pulse"></i> 报销单草稿</a></li>
                                <li><a href="#"><i class="fa fa-check-circle-o"></i> 已提交报销</a></li>
                                <li><a href="#"><i class="fa fa-check-circle"></i> 已完成报销</a></li>
                                <li class="divider">
                                <li><a href="#"><i class="fa fa-certificate"></i> 报销统计</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-arrows"></i> 报销审核<strong class="caret"></strong></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="#"><i class="fa fa-cog fa-spin"></i>待审核报销</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-check-square-o"></i>已审核报销</a>
                                </li>
                            </ul>
                        </li>*@
                </ul>
                <ul class="navbar-right nav navbar-nav">
                    @if (Request.Headers.AllKeys.Contains("token"))
                    {
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user"></i> @(Identity.Name)</a>
                        </li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user"></i> @(Identity.Name) <span class="caret"></span> </a>
                            <ul class="dropdown-menu">
                                <li><a href="/User/LoginOut">退出</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
    <div id="body">
        @RenderBody()
        <div style="height:20px;"></div>
    </div>
</body>
</html>
<script>
    $(function () {
        var topHeight = $("#header").height();
        $("#body").height(document.documentElement.clientHeight - topHeight - 21);
    });
</script>
