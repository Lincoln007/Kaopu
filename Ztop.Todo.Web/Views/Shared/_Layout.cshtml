@{
    User user = ViewBag.CurrentUser;
    if(user == null)
    {
        Response.Write("授权失败");
        RenderBody();
        return;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 智拓TODO</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div id="header" class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">智拓TODO</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">首页</a></li>
                    <li><a href="/task">任务列表</a></li>
                    <li><a href="/task/edit">创建任务</a></li>
                </ul>
                <ul class="navbar-right nav navbar-nav">
                    <li>
                        <a>@(user.DisplayName)</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div id="body" style="overflow:auto;">
        <div class="container">
            @RenderBody()
            <div style="height:20px;"></div>
        </div>
    </div>
</body>
</html>
<script>
    $(function () {
        var topHeight = $("#header").height();
        $("#body").height(document.documentElement.clientHeight - topHeight);
    });
</script>
