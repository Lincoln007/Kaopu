@{
    User user = ViewBag.CurrentUser;
    GroupType groupType = ViewBag.GroupType;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 智拓TODO</title>
    <link href="~/Content/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/bootstrap.custom.css" type="text/css"  rel="stylesheet"/>
    <link href="~/Content/jquery.datetimepicker.css" type="text/css"  rel="stylesheet"/>
    <link href="~/Content/jqtree.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/jquery.autocomplete.css" type="text/css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.datetimepicker.js"></script>
    <script src="~/Scripts/common.js"></script>
    <script src="~/Scripts/tree.jquery.js"></script>
    <script src="~/Scripts/jquery.autocomplete.js"></script>
</head>
<body>
    <div id="header" class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">智拓TODO</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">首页</a></li>
                    <li><a href="/task">任务列表</a></li>
                    <li><a href="/task/edit">创建任务</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">权限管理<span class="caret"></span></a>
                        @Html.Partial("_Authority")
                    </li>
                    
                </ul>
                @if (user != null)
                {
                    <ul class="navbar-right nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@(user.DisplayName)<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/User/LoginOut">退出</a></li>
                            </ul>
                        </li>
                        @*<li>
                                <a>@(user.DisplayName)</a>
                            </li>*@
                    </ul>
                }
                
            </div>
        </div>
    </div>
    <div id="body" style="overflow:auto;">
        <div class="container">
            <hr/>
            @RenderBody()
            <div style="height:20px;"></div>
        </div>
    </div>
</body>
</html>
<script>
    $(function () {
        var topHeight = $("#header").height();
        $("#body").height(document.documentElement.clientHeight - topHeight);
    });
</script>
