@{ 
    Layout = null;
    List<Sheet> sheets = ViewBag.Sheets;
    string name = ViewBag.Name;
}
<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">@(name) -报销单</h3>
        <hr />
        <div class="">

        </div>
        <hr />
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>序号</th>
                    <th>流水单据编号</th>
                    <th>单据编号</th>
                    <th>报销类型</th>
                    <th>报销时间</th>
                    <th>金额【元】</th>
                    <th>备注</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < sheets.Count; i++)
                {
                    var item = sheets[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@(item.Coding)</td>
                        <td>@(item.PrintNumber)</td>
                        <td>@(item.Type.GetDescription())</td>
                        <td>@(item.Time.ToLongDateString())</td>
                        <td>@(item.Money)</td>
                        <td>@(item.Remarks)</td>
                    </tr>
                }
            </tbody>
        </table>

        <hr />
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4 col-md-offset-8">
                    <button type="button" name="" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i>确定</button>
                </div>
            </div>
        </div>
        <hr />
    </div>
</div>


