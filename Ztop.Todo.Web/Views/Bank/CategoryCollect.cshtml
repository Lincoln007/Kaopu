@{ 
    Layout = null;
    string category = ViewBag.Category;
    List<Sheet> Sheets = ViewBag.Sheets;
}

<h3 class="text-center">@(category)-用户报销情况</h3>

@if (category == "出差报销")
{

}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>序号</th>
                <th>用户名</th>
                <th>报销金额【元】</th>
            </tr>
        </thead>
    </table>
}
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>序号</th>
            <th>用户名</th>
            <th>报销金额【元】</th>
        </tr>
    </thead>
    <tbody>
@for(var i = 0; i < Sheets.Count; i++)
{
    var item = Sheets[i];
    <tr>
        <td>@(i+1)</td>
        <td>@(item.Name)</td>
        <td>@(item.Money)</td>
    </tr>
}
    </tbody>
</table>
