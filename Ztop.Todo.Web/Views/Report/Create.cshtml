@using Ztop.Todo.Model
@{
    ViewBag.Title = "创建报销单";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>报销单</h2>
<div class="col-md-12">
    <button class="btn btn-default btn-success" type="button">
        <em class="glyphicon glyphicon-send"></em> 保存转交
    </button>
    <button class="btn btn-default btn-success" type="button">
        <em class="glyphicon glyphicon-floppy-disk"></em> 保存返回
    </button>
    <button class="btn btn-default btn-danger" type="button">
        <em class="glyphicon glyphicon-remove-circle"></em> 删除
    </button>
    <button class="btn btn-default " type="button">
        <em class="glyphicon glyphicon-print"></em> 打印
    </button>
    <a class="btn btn-default btn-warning" href="/Report">
        <em class="glyphicon glyphicon-menu-left"></em> 返回
    </a>
</div>

<div class="col-md-8">
    <h3>基本信息</h3>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td>单据编号</td>
                <td></td>
                <td>报销日期</td>
                <td><input type="text" id="datetimepicker2" value="" /></td>
            </tr>
            <tr>
                <td>报销人</td>
                <td>
                    <input type="text" value="" />
                </td>
                <td>报销金额合计</td>
                <td><input type="text" value="" /></td>
            </tr>
            <tr>
                <td>备注</td>
                <td colspan="3"><input type="text" style="width:100%"/></td>
            </tr>
        </tbody>
    </table>
    <h3>内容分项清单</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    分类
                </th>
                <th style="width:50%">
                    内容
                </th>
                <th>
                    金额(元)
                </th>
            </tr>
        </thead>
        @for(var i = 0; i < 10; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>
                    <select>
                        @foreach(Category category in Enum.GetValues(typeof(Category)))
                        {
                            <option value="">@(category.GetDescription())</option>
                        }
                    </select>
                </td>
                <td><input type="text" value=""  style="width:100%"/></td>
                <td><input type="text" /></td>
            </tr>
        }
    </table>
</div>
<div class="col-md-4">
    <h3>
        审核信息
    </h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    步骤
                </th>
                <th>
                    姓名
                </th>
                <th>
                    时间
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    报销填单
                </td>
                <td>
                    袁总
                </td>
                <td>
                    2016-01-01
                </td>
            </tr>
            <tr class="active">
                <td>
                    主管审核
                </td>
                <td>
                    袁总
                </td>
                <td>
                    2016-01-01
                </td>
            </tr>
            <tr>
                <td>
                    报销确认
                </td>
                <td>
                    袁总
                </td>
                <td>
                    2016-01-01
                </td>
            </tr>
            <tr class="active">
                <td>
                    财务负责人核准
                </td>
                <td>
                    袁总
                </td>
                <td>
                    2016-01-01
                </td>
            </tr>
        </tbody>
    </table>
    <div class="panel panel-default">
        <div class="panel-heading">
            
        </div>
        
    </div>
</div>
<div class="col-md-12">
    <button class="btn btn-default btn-success" type="button">
        <em class="glyphicon glyphicon-send"></em> 保存转交
    </button>
    <button class="btn btn-default btn-success" type="button">
        <em class="glyphicon glyphicon-floppy-disk"></em> 保存返回
    </button>
    <button class="btn btn-default btn-danger" type="button">
        <em class="glyphicon glyphicon-remove-circle"></em> 删除
    </button>
    <button class="btn btn-default " type="button">
        <em class="glyphicon glyphicon-print"></em> 打印
    </button>
    <button class="btn btn-default btn-warning" type="button">
        <em class="glyphicon glyphicon-menu-left"></em> 返回
    </button>
</div>


<script>
    $(function () {
        $("#datetimepicker2").datetimepicker({
            timepicker: false,
            format: 'Y/m/d',
            minDate: '@(DateTime.Today.ToShortDateString())'
        });
    })
</script>



