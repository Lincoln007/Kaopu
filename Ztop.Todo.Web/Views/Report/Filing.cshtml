                time.setTime(a);
                var timeString = time.getFullYear() + "-" + (time.getMonth() + 1) + "-" + time.getDate();
                temp = temp.replace(/{Index}/g, data[i].SerialNumber.Coding).replace("{ID}", data[i].ID).replace("{Path}", data[i].SerialNumber.BarCode).replace("{Name}", data[i].Name).replace("{Money}", data[i].Money).replace("{CheckTime}", timeString);
                Result += temp;
            }
