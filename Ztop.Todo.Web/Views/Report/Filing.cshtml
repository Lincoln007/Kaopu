        }

        $.getJSON("/Report/Search?key=" + key, function (json) {
            var data = json;
            var Result = "";
            var temp = "";
            for (var i = 0; i < data.length; i++) {
                temp = html;
                var a = data[i].CheckTime.replace("/Date(", "").replace(")/", "");
                
