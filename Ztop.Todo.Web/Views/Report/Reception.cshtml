@model Reception
@{
    Layout = null;
    bool flag = ViewBag.Detail ?? false;
}


<h3 style="margin-top:10px;">
    招待详情
</h3>
<div>
    @if (flag)
    {
        <table class="table table-bordered table-striped table-condensed" style="margin:0px">
            <tr>
                <th>招待日期</th>
                <td>@(Model.RTime.ToLongDateString())</td>
                <th>招待地方</th>
                <td>@(Model.CityName)</td>
            </tr>
            <tr>
                <th>招待人数</th>
                <td>@(Model.Amount)</td>
                <th>招待人员</th>
                <td>@(Model.Persons)</td>
            </tr>
        </table>

        <table class="table table-bordered table-condensed">
            <thead>
                <tr>
                    <th>招待内容</th>
                    <th>金额【元】</th>
                    <th>支付方式</th>
                    <th>人均消费【元】</th>
                    <th>备注</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Items)
                {
                    <tr>
                        <td>@(item.Content)</td>
                        <td>@(item.Coin)</td>
                        <td>@(item.Way.GetDescription())</td>
                        <td>@(item.Average)</td>
                        <td>@(item.Memo)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table class="table table-bordered table-condensed" style="margin:0px;">
            <tr>
                <th>招待日期</th>
                <td>
                    <input type="text" class="form-control input-sm datetimepicker" name="RTime" placeholder="招待日期" required  value="@(Model!=null? Model.RTime.ToString("yyyy-MM-dd"):"")"/>
                </td>
                <th>招待地方</th>
                <td>
                    <input type="text" class="form-control input-sm" placeholder="招待地方 " name="CityName"  required value="@(Model!=null?Model.CityName:"")"/>
                </td>
            </tr>
            <tr>
                <th>招待人数</th>
                <td>
                    <div class="input-group">
                        <input type="text" class="form-control input-sm" placeholder="" name="Amount" required value="@(Model!=null?Model.Amount.ToString():"")" />
                        <span class="input-group-addon">人</span>
                    </div>
                   
                </td>
                <th>接待人员</th>
                <td>
                    <div class="input-group">
                        <input type="text" class="form-control input-sm" placeholder="接待人员" name="Persons" value="@(Model!=null?Model.Persons:"")" readonly="readonly" required />
                        <span class="input-group-btn">
                            <a href="/Manager/SelectUser?persons=" name="SelectUser" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#Modal"><i class="glyphicon glyphicon-zoom-in"></i>选择人员</a>
                        </span> 
                    </div>
                </td>
            </tr>
        </table>
        Html.RenderPartial("ReceptionItem",Model!=null? Model.Items:null);
    }

</div>

<script>

    $(function () {
        $("a[name='SelectUser']").click(function () {
            var persons = $("input[name='Persons']").val();
            if (persons != undefined) {
                $(this).attr("href", "/Manager/SelectUser?persons=" + persons);
            }
        });
    });
</script>
